########################1.Soru##########################

def ciroHesapla (sMik,bSat):
    ciro=sMik*bSat
    while(ciro <= 500000):
        sMik=sMik+200
        bSat=bSat+20
        ciro=ciro=sMik*bSat
        print(ciro)



sMik=500
bSat=20
ciroHesapla (sMik,bSat)
